@model IEnumerable<MVC_First.Models.assignmentResult>

@{
    ViewBag.Title = "ShowAssignmentsResult";
}




<script class="cssdeck" src="~/Scripts/jquery.min.js"></script>
        <link href="~/Content/kendo/2013.3.1119/kendo.flat.min.css" rel="stylesheet" />
        <link href="~/Content/kendo/2013.3.1119/kendo.common.min.css" rel="stylesheet" />
        <script src="~/Scripts/kendo/2013.3.1119/jquery.min.js"></script>
        <script src="~/Scripts/kendo/2013.3.1119/kendo.web.min.js"></script>
<script>
    $('document').ready(function () {


        $(".k-primary").kendoButton();

    });
    </script>



<div class ="k-content" style ="background-color:mintcream; height:auto; width:50%;margin-left:25%">
<h2 class ="k-header">Assignments Result:</h2>

@foreach (var item in Model)
{
    
    <div style ="font-size:medium;border:solid;border-color:darkgray;width:100%;background-color:#e5e0e0" >          
                   &nbsp Student ID : @item.sid<br><br>
                   &nbsp MarksObtained:@item.marksObtained<br><br>
                   &nbsp TotalMarks:@item.totalMarks<br><br>

                   &nbsp <button class="k-primary" type="submit" style ="width:20%" onclick="location.href='@Url.Action("ShowFile", "Teacher" , new {path = item.outPutFilePath})'">View OutPut File</button>
                   &nbsp <button class="k-primary" type="submit" style ="width:20%" onclick="location.href='@Url.Action("ShowFile", "Teacher" , new {path = item.codeFilePath})'">view Source Code</button><br><br>
                  </div><br>
   
}
</div>

